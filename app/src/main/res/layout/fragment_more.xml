<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/degree_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/my_yellow_basic"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="degree"
                android:inputType="numberSigned"
                android:textColorHint="@color/additional_dark_brown" />

            <EditText
                android:id="@+id/minutes_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/my_yellow_basic"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="minutes"
                android:inputType="number"
                android:textColorHint="@color/additional_dark_brown" />

            <EditText
                android:id="@+id/seconds_import"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/my_yellow_basic"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="seconds"
                android:inputType="number"
                android:textColorHint="@color/additional_dark_brown" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/dirrection_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/my_yellow_basic"
                android:ems="10"
                android:gravity="center_horizontal"
                android:hint="Direction"
                android:inputType="textPersonName"
                android:textColorHint="@color/additional_dark_brown" />

            <Button
                android:id="@+id/create_basic_coordinate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Create Coordinate"
                android:textColor="@color/additional_dark_brown"
                android:onClick="saveCoordinate"
                app:backgroundTint="@color/my_yellow_basic" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/get_coordinates"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Get Coordinate"
                android:textColor="@color/additional_dark_brown"
                android:onClick="getCoordinate"
                app:backgroundTint="@color/my_yellow_basic" />

            <Button
                android:id="@+id/get_decimal_Coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:text="Get Decimal Coordinate"
                android:onClick="getDecimalCoordinate"
                android:textColor="@color/additional_dark_brown"
                app:backgroundTint="@color/my_yellow_basic" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/addition_light_green" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/degree_input1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="degree"
                    android:inputType="numberSigned"
                    android:textColorHint="@color/additional_dark_brown" />

                <EditText
                    android:id="@+id/minutes_input1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="minutes"
                    android:inputType="number"
                    android:textColorHint="@color/additional_dark_brown" />

                <EditText
                    android:id="@+id/seconds_import1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="seconds"
                    android:inputType="number"
                    android:textColorHint="@color/additional_dark_brown" />

                <EditText
                    android:id="@+id/dirrection_input1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Direction"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/additional_dark_brown" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/degree_input2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="degree"
                    android:inputType="numberSigned"
                    android:textColorHint="@color/additional_dark_brown" />

                <EditText
                    android:id="@+id/minutes_input2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="minutes"
                    android:inputType="number"
                    android:textColorHint="@color/additional_dark_brown" />

                <EditText
                    android:id="@+id/seconds_import2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="seconds"
                    android:inputType="number"
                    android:textColorHint="@color/additional_dark_brown" />

                <EditText
                    android:id="@+id/dirrection_input2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/my_yellow_basic"
                    android:ems="10"
                    android:gravity="center_horizontal"
                    android:hint="Direction"
                    android:inputType="textPersonName"
                    android:textColorHint="@color/additional_dark_brown" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/calculate_midle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calculate middle Coordinate"
            android:onClick="calculateMiddleOfTwoCoordinates"
            android:textColor="@color/additional_dark_brown"
            app:backgroundTint="@color/my_yellow_basic" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/result_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Results:"
                    android:textColor="@color/additional_dark_brown"
                    android:textSize="18dp" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</FrameLayout>